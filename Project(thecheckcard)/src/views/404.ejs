<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 Not Found</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #000000;
        }
        #tsparticles {
            position: absolute;
            width: 100%;
            height: 100%;
        }
        .content {
            z-index: 1;
            text-align: center;
            color: white;
        }
        .content h1 {
            font-size: 6em;
        }
        .content p {
            font-size: 1.5em;
        }
        /* 미디어 쿼리 추가 */
        @media (max-width: 768px) {
            .content h1 {
                font-size: 4em;
            }
            .content p {
                font-size: 1.2em;
            }
        }
        @media (max-width: 480px) {
            .content h1 {
                font-size: 3em;
            }
            .content p {
                font-size: 1em;
            }
        }
    </style>
</head>
<body>
    <div id="tsparticles"></div>
    <div class="content">
        <h1>404</h1>
        <p>Page Not Found</p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2/tsparticles.bundle.min.js"></script>
    <script>
        window.addEventListener('load', function() {
            tsParticles.load("tsparticles", {
                "fullScreen": {
                    "enable": true,
                    "zIndex": 0
                },
                "particles": {
                    "number": {
                        "value": 0
                    },
                    "shape": {
                        "type": "char",
                        "character": {
                            "value": "404",
                            "font": "Verdana",
                            "style": "",
                            "weight": "400",
                            "fill": true
                        }
                    },
                    "color": {
                        "value": "#ffffff"
                    },
                    "size": {
                        "value": 10,
                        "random": false
                    },
                    "move": {
                        "enable": true,
                        "speed": 10,
                        "direction": "none",
                        "random": false,
                        "straight": false,
                        "outMode": "out",
                        "attract": {
                            "enable": false,
                            "rotateX": 600,
                            "rotateY": 1200
                        }
                    }
                },
                "interactivity": {
                    "events": {
                        "onhover": {
                            "enable": true,
                            "mode": "repulse"
                        },
                        "onclick": {
                            "enable": true,
                            "mode": "push"
                        },
                        "resize": true
                    },
                    "modes": {
                        "repulse": {
                            "distance": 100,
                            "duration": 0.4
                        },
                        "push": {
                            "particles_nb": 4
                        }
                    }
                },
                "retina_detect": true
            });
        });
    </script>
</body>
</html>
